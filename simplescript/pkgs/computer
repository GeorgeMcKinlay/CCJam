local function isAdvanced()
	return term.isColour()
end

local function isTurtle()
	return turtle ~= nil
end

local function isPocket()
	return pocket ~= nil
end

local function isComputer()
	return not isTurtle() and not isPocket() 
end

return { 
	["isComputer"] = isComputer,
	["isAdvanced"] = isAdvanced, 
	["isTurtle"] = isTurtle, 
	["isPocket"] = isPocket 
}