# Clear the screen with a green colour.
terminal: setBackgroundColour["green"]
terminal: clear[]; setCursorPos[2, 2]

# Draw a 8x4 rectangle.
terminal: setBackgroundColour["blue"]
terminal: write[" "] *8
terminal: setCursorPos[2, 3]; write[" "] *8
terminal: setCursorPos[2, 4]; write[" "] *8
terminal: setCursorPos[2, 5]; write[" "] *8
